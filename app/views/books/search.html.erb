  
  
  <h2>Book Search Page</h2>

<%= form_tag 'search', :method => 'get', :id => "books_search" do %>
  <p>
    <%= text_field_tag :search, params[:search] , :class =>"input-medium search-query" %>&nbsp;
    <%= submit_tag "Search", :name => nil , :class => "btn"%>
  </p>
  
<% end %>
<br />



<table class="table table-striped">
  <tr>
    <th>Title</th>
    
    <th>Authorname</th>
   
    <th>Price</th>
    <th>Action</th>
    
  </tr>
  <% for book in @books %>
    <tr>
   
      <td><%= book.name %></td>
    
      <td><%= book.authorname %></td>
    
      <td><%= book.price %></td>
     
      <td><%= link_to "Show", book %></td>
     
    </tr>
  <% end %>
</table>
<br />
<p><%= link_to 'Back' , books_path , :class => "btn" %></p>